#fontname		"sans-serif:pixelsize=14:bold"
sticky			yes

ignore			bar
ignore			status.sh

command terminal	xterm
command firefox		firefox
command launcher	xterm

autogroup 0			bar
autogroup 0			launcher
autogroup 1			xterm
autogroup 2			firefox

gap					30 0 0 0
snapdist			5px
moveamount			2px

bind-key 4-v		window-vtile
bind-key 4-s		window-htile
bind-key 4-h		window-snap-left
bind-key 4-j		window-snap-down
bind-key 4-k		window-snap-up
bind-key 4-l		window-snap-right

bind-key 4-Escape	"xterm -e $HOME/bin/launcher.sh"
bind-key 4-t		terminal
bind-key 4-b		firefox

bind-key 4-1		group-only-1
bind-key 4-2		group-only-2
bind-key 4-3		group-only-3
bind-key 4-4		group-only-4
